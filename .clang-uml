# clang-uml configuration file for ENSTQuoridor
compilation_database_dir: build-ninja
output_directory: docs/uml

diagrams:
  # Complete class diagram of the project
  full_class_diagram:
    type: class
    title: "ENSTQuoridor - Complete Class Diagram"
    glob:
      - src/**/*.cpp
      - include/**/*.hpp
    include:
      namespaces:
        - quoridor
      paths:
        - include
        - src
    exclude:
      namespaces:
        - std
        - sf
    generate_packages: true
    package_type: directory
    plantuml:
      after:
        - 'note "Generated by clang-uml" as N1'

  # Model layer class diagram
  model_class_diagram:
    type: class
    title: "ENSTQuoridor - Model Layer"
    glob:
      - src/model/*.cpp
      - include/model/*.hpp
    include:
      paths:
        - include/model
        - src/model
    exclude:
      namespaces:
        - std
        - sf
    generate_packages: false

  # Controller layer class diagram
  controller_class_diagram:
    type: class
    title: "ENSTQuoridor - Controller Layer"
    glob:
      - src/controller/*.cpp
      - include/controller/*.hpp
    include:
      paths:
        - include/controller
        - src/controller
    exclude:
      namespaces:
        - std
        - sf
    generate_packages: false

  # View layer class diagram  
  view_class_diagram:
    type: class
    title: "ENSTQuoridor - View Layer"
    glob:
      - src/view/*.cpp
      - include/view/*.hpp
    include:
      paths:
        - include/view
        - src/view
    exclude:
      namespaces:
        - std
        - sf
    generate_packages: false
